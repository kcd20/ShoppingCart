@{
    string flag = (string)TempData["Validation"];
}

@section Scripts {
    <script src="~/js/Login/Login.js"></script>
}

<link rel="stylesheet" href="~/css/Login.css" />
<form name="loginForm" action="/Login/Login" onsubmit="return validateForm()" method="POST">
    <div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
        <div class="card card0 border-0">
            <div class="row d-flex">
                <div class="col-lg-6">
                    <div class="card1 pb-5">
                        <div class="row"> <img src="~/images/Login3.png" class="logo"> </div>
                        <div class="row px-3 justify-content-center mt-4 mb-5 border-line"> <img src="~/images/Login2.jpg" class="image"> </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card2 card border-0 px-4 py-5">
                        <div class="row mb-4 px-3">
                            <h5 class="mb-0 mr-4 mt-2">Sign in with</h5>
                            <div class="facebook text-center mr-3">
                                <div class="fa fa-facebook"></div>
                            </div>
                            <div class="twitter text-center mr-3">
                                <div class="fa fa-twitter"></div>
                            </div>
                            <div class="linkedin text-center mr-3">
                                <div class="fa fa-linkedin"></div>
                            </div>
                        </div>
                        <div class="row px-3 mb-4">
                            <div class="line"></div> <small class="or text-center">Or</small>
                            <div class="line"></div>
                        </div>
                        <div class="row px-3">
                            <h4>Username</h4>
                            <input class="mb-4" type="text" name="username" placeholder="Enter your username">
                        </div>
                        <div class="row px-3">
                            <h4>Password</h4>
                            <input type="password" name="password" placeholder="Enter password">
                        </div>

                        <div class="row mb-3 px-3">  <input type="submit" value="Login" class="btn btn-primary " id="submit_btn" /> </div>
                    </div>
                </div>
            </div>
            @{if (@flag != null)
                {
                    <div class="alert alert-danger" role="alert" style="width: 410px; text-align: center ;margin-left:590px;margin-top:-100px">
                        <p>Incorrect username or password.Please try again.</p>
                    </div>
                }}

            <div class="bg-blue py-4">
                <div class="row px-3">
                    <small class="ml-4 ml-sm-5 mb-2">Copyright &copy; 2021. SA53 Shopping Cart</small>
                    <div class="social-contact ml-4 ml-sm-auto"> <span class="fa fa-facebook mr-4 text-sm"></span> <span class="fa fa-google-plus mr-4 text-sm"></span> <span class="fa fa-linkedin mr-4 text-sm"></span> <span class="fa fa-twitter mr-4 mr-sm-5 text-sm"></span> </div>
                </div>
            </div>
        </div>
    </div>
</form>