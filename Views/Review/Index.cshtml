<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .container {
        display: grid;
        height: 100%;
        place-items: center;
        text-align: center;
        background: #d4cece;
    }

    .Card0 {
        width: 500px;
        height: 500px;
        background: #82e6ef;
        padding: 20px 20px;
        border: 1px solid #444;
        border-radius: 5px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
    }

    .star-rating input {
        display: none;
        direction: rtl;
    }

    .star-rating label {
        content: '\f005';
        font-family: fontAwesome;
        font-size: 52px;
        color: #444;
        padding: 20px 20px;
        float: right;
        transition: all 0.2s ease;
    }

    input:not(:checked) ~ label:hover,
    input:not(:checked) ~ label:hover ~ label {
        color: #fd4;
    }

    input:checked ~ label {
        color: #fd4;
    }
    /*    .star-rating input#star1:checked ~ label{
        color: #fe7;
        text-shadow: 0 0 20px #952;
    }*/
    /*    .star-rating header {
        width: 100%;
        font-size:24px;
        color: #fe7;
        font-weight: 500;
        margin: 0 0 20px 0;
        text-align: center;
        transition: all 0.2s ease;
    }*/
    .textarea {
        height: 180px;
        width: 100%;
        padding: 0px 10px 2px 10px;
        overflow: hidden;
    }

        .textarea textarea {
            height: 100%;
            width: 100%;
            outline: none;
            border: 1px solid #333;
            padding: 10px;
            font-size: 17px;
        }

    .btn {
        height: 15%;
        width: 96%;
        /*      border: 1px solid #444;*/
        padding: 4px 20px 20px 20px;
        outline: none;
        background: #1a36f1;
        color: #ffffff;
        font-size: 18px;
        font-weight: 500;
        text-transform: uppercase;
        transition: all 0.2s ease;
    }
</style>

<form name="ReviewForm" action="/Review/ReviewReceive" onsubmit="return validateReviewData()" method="post">
    <div class="Card0">
        <div class="star-rating">
            <input type="hidden" id="ItemId" value="@Model.ItemId" name="ModelId" />
            <input type="hidden" id="ProductId" value="@Model.PurchaseId" name="Model1Id" />
            <input type="radio" name="Score" value=5 id="star1"> <label for="star1" class="fas fa-star"></label>
            <input type="radio" name="Score" value=4 id="star2"> <label for="star2" class="fas fa-star"></label>
            <input type="radio" name="Score" value=3 id="star3"> <label for="star3" class="fas fa-star"></label>
            <input type="radio" name="Score" value=2 id="star4"> <label for="star4" class="fas fa-star"></label>
            <input type="radio" name="Score" value=1 id="star5"> <label for="star5" class="fas fa-star"></label>
            <div class="textarea">
                <textarea cols="30" name="ReviewContent" placeholder="Your comment is important to us!"></textarea>
            </div>
            <div class="btn">
                <button type="submit" class="btn">Post</button>
            </div>
        </div>
    </div>
</form>